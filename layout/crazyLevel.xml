<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layoutDirection="ltr"
    android:background="@drawable/back_hill"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Crazy Level"
        android:layout_marginTop="15dp"
        android:textSize="35dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="number of colors: "
            android:gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:textSize="30dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="0"
            android:layout_marginTop="20dp"
            android:textSize="30dp"
            android:id="@+id/TvScoreCrazy"/>
    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="370dp"
        android:stretchColumns="1"
        android:background="@drawable/fullcenter"
        android:layout_marginTop="70dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp">

        <TableRow
            android:layout_width="370dp"
            android:layout_height="185dp"
            >
            
            <Button
                android:layout_width="185dp"
                android:layout_height="185dp"
                android:textSize="20dp"
                android:background="@drawable/green"
                android:tag="green"
                android:id="@+id/btnTopLeft"/>
            <Button
                android:layout_width="185dp"
                android:layout_height="185dp"
                android:tag="red"
                android:textSize="20dp"
                android:background="@drawable/red"
                android:id="@+id/btnTopRight"/>
        </TableRow>

         <TableRow
            android:layout_width="370dp"
            android:layout_height="185dp">
            
            <Button
                android:layout_width="185dp"
                android:layout_height="185dp"
                android:tag="yellow"
                android:textSize="20dp"
                android:background="@drawable/yellow"
                android:id="@+id/btnBottomLeft"/>
            <Button
                android:layout_width="185dp"
                android:layout_height="185dp"
                android:tag="blue"
                android:textSize="20dp"
                android:background="@drawable/blue"
                android:id="@+id/btnBottomRight"/>
        </TableRow>
    </TableLayout>

    <Button
            android:layout_width="70dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="30dp"
            android:layout_height="70dp"
            android:layout_marginRight="180dp"
            android:id="@+id/btnbackCrazyLevel"
            android:background="@drawable/back"/>
</LinearLayout>
